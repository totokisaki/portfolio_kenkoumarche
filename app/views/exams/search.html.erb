<div class="page-top">
  <p>検査項目からさがす</p>
</div>

    <table class="list_table" >
      <thead>
        <tr>
          <th>画像</th>
          <th>検査項目</th>
          <th>検査の目的</th>
          <th>食事・生活</th>
        </tr>
      </thead>
      <tbody>
        <% @exams.each do |exam| %>
          <tr>
            <td><%= exam.exam_item %></td>
            <td><%= exam.exam_purpose %></td>
            <td><%= link_to "アドバイスをみる", exam %></td>
            <td><%= button_to "削除", exam, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
